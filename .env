# EXNESS Docker Configuration

# MT5 Terminal Path (Windows path will be mounted)
MT5_TERMINAL_PATH=/mt5

# Bridge Configuration
BRIDGE_PORT=5555
API_PORT=8000
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_DB=exness_trading
POSTGRES_USER=exness_user
POSTGRES_PASSWORD=exness_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-token-here
INFLUXDB_ORG=exness
INFLUXDB_BUCKET=trading_data

# EXNESS API Credentials (use CREDENTIAL: prefix for secure storage)
EXNESS_ACCOUNT_ID=CREDENTIAL:EXNESS_ACCOUNT_ID
EXNESS_API_KEY=CREDENTIAL:EXNESS_API_KEY
EXNESS_API_SECRET=CREDENTIAL:EXNESS_API_SECRET
