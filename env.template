# -----------------------------------------------------------------------------
# Bridge Service Configuration
# -----------------------------------------------------------------------------
# Port for MT5 bridge communication (default: 5555)
BRIDGE_PORT=5555

# Port for REST API (default: 8000)
API_PORT=8000

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
# Database name
POSTGRES_DB=exness_trading

# Database user
POSTGRES_USER=exness_user

# Database password (change this in production!)
POSTGRES_PASSWORD=exness_password

# Database host (internal Docker network name)
POSTGRES_HOST=postgres

# Database port
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Redis host (internal Docker network name)
REDIS_HOST=redis

# Redis port
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# InfluxDB Configuration
# -----------------------------------------------------------------------------
# InfluxDB URL (internal Docker network)
INFLUXDB_URL=http://influxdb:8086

# InfluxDB admin username
INFLUXDB_ADMIN_USER=admin

# InfluxDB admin password (change this in production!)
INFLUXDB_ADMIN_PASSWORD=adminpassword

# InfluxDB organization name
INFLUXDB_ORG=exness

# InfluxDB bucket name for time-series data
INFLUXDB_BUCKET=trading_data

# InfluxDB token (generated after first setup)
INFLUXDB_TOKEN=your-token-here

# InfluxDB port (external access)
INFLUXDB_PORT=8086

# -----------------------------------------------------------------------------
# Grafana Configuration
# -----------------------------------------------------------------------------
# Grafana admin username
GRAFANA_ADMIN_USER=admin

# Grafana admin password (change this in production!)
GRAFANA_ADMIN_PASSWORD=admin

# Grafana port (external access)
GRAFANA_PORT=3000

